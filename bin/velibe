#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
## My Velib Querier

require 'velibe'

## Main

case ARGV[0]
  when /f(av(orite)?)?$/
    # handle favorites
    if /a(dd)?/ =~ ARGV[1]
      stations = ARGV[2..-1]
      # TODO: check if all number
      Velibe.add_favorite(stations)
    else
      Velibe.print_favorites
    end

  else
    # TODO: check if all number
    Velibe.print_stations(ARGV)
end
